<p style="color: green"><%= notice %></p>
<div class="px-2">
  <h1 class="text-3xl font-bold underline text-teal-700 text-center">Group</h1>
  <%= render @group %>
  <h1 class="text-3xl font-bold  text-teal-700 font-mono text-center p-2">Articles</h1>
  <%= render 'articles/article', obj: @group.articles%>
  <br>

  <% if user_signed_in? && @group.users.ids.include?(current_user.id)%>
    <button class="bg-teal-600 hover:bg-teal-900 text-white font-bold py-2 px-4 rounded-full">
      <%= link_to 'Create New Article ',  new_article_path(@group)%>
    </button>
  <%end%>
  <div>
    <br>
    <% if user_signed_in? && current_user == @group.user %>
      <button class="bg-transparent hover:bg-teal-900 text-teal-700 font-semibold hover:text-white py-2 px-4 border border-teal-700 hover:border-transparent rounded">
        <%= link_to "Edit this group", edit_group_path(@group) %>
      </button>
      <%= button_to "Destroy this group", @group, method: :delete %>
    <%end%>
    <button class="bg-teal-600 hover:bg-teal-900 text-white font-bold py-2 px-4 border border-white rounded">
      <%= link_to "Back to group", groups_path%>
    </button>
  </div>
</div>
<br>
