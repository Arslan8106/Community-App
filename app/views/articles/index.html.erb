<div class="p-5">
  <p style="color: green"><%= notice %></p>
  <h1 class="text-3xl font-bold  text-black font-mono text-center p-2">Articles</h1>
  <%= render 'article', obj: @articles %>
  <br>
  <button class="bg-transparent hover:bg-teal-900 text-teal-700 font-semibold hover:text-white py-2 px-4 border border-teal-700 hover:border-transparent rounded">
    <%= link_to "New article", new_article_path %>
  </button>
  <button class="bg-teal-600 hover:bg-teal-900 text-white font-bold py-2 px-4 border border-white rounded">
    <%= link_to "Back to group", groups_path %>
  </button>
  <hr>
</div>
<%= paginate @articles %>
