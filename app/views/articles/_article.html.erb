<div class="container mx-auto">
<div class="grid grid-cols-3 gap-8 justify-center gap-x-8 p-1">
  <% obj.each do |article| %>
   
      <div class="card border w-90 bg-slate-100">
      
        <div class="px-6 py-7 text-center text-teal-700">
          <b>  <%= link_to article.title, article_path(article), class:"font-bold text-xl mb-2 uppercase"  %></b>
          <hr>
          <% if article.image.attached? %>
                <%= image_tag article.image, style: 'height:250px;width:400px;'%>
            <%else%>
            <% end %>
        </div>
        <div class=" font-thin px-1 py-2 text-center first-line:uppercase first-line:tracking-widest first-letter:text-7xl first-letter:font-bold first-letter:text-slate-900
  first-letter:mr-3">
       <%= truncate(article.description, length: 270)%>
                <hr >
          <small>Created by: <%=article.user.email %></small>
          <br>
          <small>Date Created: <%=time_ago_in_words(article.created_at) %> ago</small>
        </div>
        <%# <%=render(CommentsComponent.new(user_name: comment.user_name, body: comment.body )) %>
  
      </div>
   
  <%end%>
</div>
</div>