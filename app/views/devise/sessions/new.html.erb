<div class='grid md:grid-cols-12 border-red-500'>
  <div class="col-span-4 text-white font-sans font-bold bg-teal-800 min-h-screen pl-7">
    <div class="grid grid-rows-6 grid-flow-col min-h-screen items-center justify-items-start">
      <div class="row-span-4 row-start-2 text-4xl">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
        <div class=" px-24">
          Sign In    
          </div>                
          <div class="pt-10 pr-20">
            <label class="text-sm font-sans font-medium">
            Email
            </label>
            <%= f.text_field :email, placeholder:"Enter email" ,class:"w-full bg-white py-3 px-12 border hover: border-gray-500 rounded shadow text-black font-sans" %>
          </div>
          <div class="pt-2 pr-20">
            <label class="text-sm font-sans font-medium">
              Password
            </label>
            <%= f.password_field :password, placeholder:"Enter password" ,class:"w-full bg-white py-3 px-12 border hover: border-gray-500 rounded shadow text-black font-sans" %>
            <div class="text-sm font-sans font-medium text-black underline">
              <a>
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
                <% end %>
              </a>
            </div>
          </div>
          <!-- Button -->
          <div class="text-sm font-sans font-medium w-full pr-20 pt-14">
            <button class="bg-teal-600 hover:bg-teal-900 text-white font-bold py-2 px-4 border border-white rounded">
              <%= f.submit "Login" %>
            </button>
          </div>
        <%end%>
      </div>
      <!-- Text -->
      <div class="text-sm font-sans font-medium text-black underline">
        <a>   
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Don´t have an account? Sign up", new_registration_path(resource_name) %><br />
          <% end %>
        </a>
      </div>
    </div>
  </div>
  <!-- Second column image -->
  <div class="banner md:col-span-8 col-span-8 text-white font-sans font-bold">
    <!-- Aquí iría algún comentario -->
  </div>
</div>
<style>
  .banner {
      background: url( 'https://s1.1zoom.me/b6058/448/Dogs_Svetlana_Shelemeteva_Hug_Little_girls_568770_1920x1080.jpg' );
      background-repeat: no-repeat;
      background-size: cover
  }
</style>
